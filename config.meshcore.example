#!/usr/bin/env python3
"""
Configuration exemple pour mode MeshCore Companion
Bot sans connexion Meshtastic, uniquement DM via MeshCore serial
"""

# ========================================
# CONFIGURATION MODE DE CONNEXION
# ========================================

# Désactiver la connexion Meshtastic
MESHTASTIC_ENABLED = False  # Pas de connexion Meshtastic

# Activer le mode MeshCore companion
CONNECTION_MODE = 'serial'  # Ignoré en mode MeshCore

# ========================================
# CONFIGURATION MODE MESHCORE COMPANION
# ========================================
MESHCORE_ENABLED = True  # Activer mode companion MeshCore
MESHCORE_SERIAL_PORT = "/dev/ttyUSB0"  # Port série pour MeshCore (adapter selon votre configuration)

# ========================================
# CONFIGURATION LLAMA.CPP (REQUIS)
# ========================================
LLAMA_HOST = "127.0.0.1"
LLAMA_PORT = 8080

# ========================================
# CONFIGURATION ESPHOME (OPTIONNEL)
# ========================================
ESPHOME_HOST = "192.168.1.27"
ESPHOME_PORT = 80
ESPHOME_TELEMETRY_ENABLED = False  # Désactivé en mode companion

# ========================================
# CONFIGURATION VIGILANCE MÉTÉO (OPTIONNEL)
# ========================================
VIGILANCE_ENABLED = True
VIGILANCE_DEPARTEMENT = '25'  # Doubs
VIGILANCE_CHECK_INTERVAL = 28800  # 8 heures
VIGILANCE_ALERT_THROTTLE = 3600  # 1 heure

# ========================================
# CONFIGURATION BLITZ MONITOR (OPTIONNEL)
# ========================================
BLITZ_ENABLED = True
BLITZ_LATITUDE = 47.123  # Latitude de référence
BLITZ_LONGITUDE = 6.456  # Longitude de référence
BLITZ_RADIUS_KM = 50
BLITZ_CHECK_INTERVAL = 900  # 15 minutes

# ========================================
# CONFIGURATION IA POUR MESHCORE
# ========================================
# Réponses courtes adaptées aux contraintes MeshCore
MESH_AI_CONFIG = {
    "system_prompt": "Tu es un assistant accessible via MeshCore. Réponds en français, très court, 250 caractères maximum. Sois précis et concis.",
    "max_tokens": 1500,
    "temperature": 0.7,
    "top_p": 0.95,
    "top_k": 20,
    "timeout": 60,
    "max_response_chars": 250
}

# ========================================
# CONFIGURATION TELEGRAM (OPTIONNEL)
# ========================================
TELEGRAM_ENABLED = False  # Désactivé en mode companion
TELEGRAM_BOT_TOKEN = ""

# Configuration Telegram AI (si Telegram activé)
TELEGRAM_AI_CONFIG = {
    "system_prompt": "Tu es un assistant intelligent accessible via Telegram...",
    "max_tokens": 4000,
    "temperature": 0.8,
    "timeout": 120,
    "max_response_chars": 3000
}

# ========================================
# CONFIGURATION CLI (OPTIONNEL)
# ========================================
CLI_ENABLED = False  # Peut être activé pour tests locaux
CLI_SERVER_HOST = '127.0.0.1'
CLI_SERVER_PORT = 9999

# ========================================
# LIMITES ET THROTTLING
# ========================================
MAX_MESSAGE_SIZE = 250  # Adapter selon MeshCore
MAX_COMMANDS_PER_WINDOW = 5
COMMAND_WINDOW_SECONDS = 300

# ========================================
# DEBUG
# ========================================
DEBUG_MODE = False

# ========================================
# CONFIGURATION BASE DE DONNÉES
# ========================================
# Node data is now stored in SQLite (traffic_history.db)

# ========================================
# FONCTIONNALITÉS DÉSACTIVÉES EN MODE COMPANION
# ========================================
# Les fonctionnalités suivantes requièrent Meshtastic et sont désactivées:
# - PROCESS_TCP_COMMANDS (pas de TCP)
# - TCP_* (pas de TCP)
# - NEIGHBOR_* (pas de voisins Meshtastic)
# - MQTT_NEIGHBOR_* (pas de collecte MQTT Meshtastic)
# - NODE_UPDATE_INTERVAL (pas de nœuds Meshtastic)

# ========================================
# NOTES MODE MESHCORE COMPANION
# ========================================
# Commandes supportées en mode companion:
#   - /bot <question>     : Chat avec IA
#   - /weather [ville]    : Météo
#   - /rain [ville] [j]   : Graphiques pluie
#   - /power              : Télémétrie ESPHome (si configuré)
#   - /sys                : État système (CPU, RAM, uptime)
#   - /help               : Aide
#   - /blitz              : Éclairs détectés (si activé)
#   - /vigilance          : Vigilance météo (si activé)
#
# Commandes NON supportées (requièrent Meshtastic):
#   - /nodes, /my, /trace, /neighbors, /info
#   - /stats, /top, /histo, /packets
#   - /keys, /propag, /hop
#   - /db
